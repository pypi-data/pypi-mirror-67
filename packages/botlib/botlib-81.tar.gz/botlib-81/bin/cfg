if [ "$(id -u)" -ne 0 ]; then
    echo "you need root permissions" && exit 1
fi

if [ -z "$1" ]; then
   MODULES="bot";
else
   MODULES=$1;
fi
if [ -z "$2" ]; then
   SERVER="localhost";
else
   SERVER=$2;
fi
if [ -z "$3" ]; then
    CHANNEL="#botib";
else
    CHANNEL=$3;
fi
if [ -z "$4" ]; then
    NICK="botlib";
else
    NICK=$4;
fi

botctl cfg krn modules "$MODULES"
botctl cfg irc server "$SERVER"
botctl cfg irc channel "$CHANNEL"
botctl cfg irc nick "$NICK"

echo "done"
