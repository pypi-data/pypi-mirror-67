#!/bin/bash
{% block arguments -%}
#SBATCH --job-name={{ job_name }}
#SBATCH --nodes=1
#SBATCH --cpus-per-task={{ n_cpus|default(n_gpus) }}
#SBATCH --gres=gpu:{{ n_gpus }}
{% if email -%}
#SBATCH --mail-type=ALL
#SBATCH --mail-user={{ email }}
{%- endif %}
#SBATCH --output={{ paths.output }}
{% for key, val in sbatch_options.items() -%}
    #SBATCH --{{ key|replace('_', '-') }}={{ val }}
{% endfor %}
{% endblock -%}

{% block header -%}
#########################
#
# Job: {{ job_name }}
#
#########################
{% endblock %}

{% block body -%}

{% block modules -%}
##### Load Modules
{% if modules -%}
    module purge
    {% for module in modules -%}
        module load {{ module }}
    {% endfor %}
{% endif %}
{% endblock %}

{% block environment -%}
##### Setup Environment
{% if conda_env -%}
    # activate conda environment
    module load anaconda3/{{ conda_version }}
    . deactivate
    source activate {{ conda_env }}
{% endif %}
{% endblock %}

{% block cmd -%}
##### Run Command
cd {{ run_dir }}
# run script with arguments
{{ command }}
{% endblock %}

{% endblock %}
